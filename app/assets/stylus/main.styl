html, body
  bg          #F0
  color       #333
  font-size   16px
  height  100%
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif 
  font-weight 300
  
.text-center
  text-align center

.vertical-align
  display         flex
  align-items     center
  justify-content center

.render-container
  bg            white
  size          640px 480px
  margin        0 auto
  border        5px solid white
  display       block
  box-shadow    0 0 6px 2px rgba(black, .15)
  border-radius 5px